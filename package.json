{
  "name": "miruku-desktop",
  "version": "1.0.0",
  "description": "Simple Electron desktop client for Miruku.cafe with Discord Rich Presence",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "cafe.miruku.client",
    "productName": "MirukuCafe",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MirukuCafe"
    }
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.7.3"
  }
} 